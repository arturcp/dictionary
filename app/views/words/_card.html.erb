<div class="col s12 m6 l4">
  <div class="card dictionary-card">
    <div class="card-content">
      <span class="card-title"><%= word %></span>
      <div class="card-description">
        <%= format_description(description, highlighted) %>
      </div>
    </div>
    <div style="background-color: #fff; padding: 5px">
      <div class="chip">Tag 1</div>
      <div class="chip">Tag 2</div>
    </div>
    <div class="card-action">
      <%= link_to_dictionary(word) %>
      <a href="#">Thesaurus</a>
      <a href="#">Collocations</a>
    </div>
  </div>
</div>
