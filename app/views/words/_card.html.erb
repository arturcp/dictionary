<div class="col s12 m6 l4">
  <div class="card dictionary-card">
    <div class="card-content">
      <span class="card-title"><%= word %></span>
      <div class="card-description">
        <%= format_description(description, highlighted) %>
      </div>
    </div>
    <div class="card-tags">
      <% tags.each do |tag| %>
        <div class="chip"><%= tag.name %></div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to_dictionary(word) %>
      <%= link_to_thesaurus(word) %>
      <%= link_to_collocation_dictionary(word) %>
    </div>
  </div>
</div>
